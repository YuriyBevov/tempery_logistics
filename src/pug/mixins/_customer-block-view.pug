include ./_product-card

-
  const commonMb = 'mb-4 mb-md-5'

mixin customer-block-view(data)
  .customer.bg-white.pt-4.pb-4.px-md-4.px-lg-5.mb-3.mb-md-4
    .customer-header.d-flex.flex-column.flex-md-row.align-items-start.align-items-md-center( class= commonMb)
      .customer-logo.pe-4.pb-4.pb-md-0
        img(src=`./assets/img/${data.logo}` alt= data.title width= data.logoWidth height= data.logoHeight)
      .customer-info.p-md-4
        h2.customer-title.mb-3=data.title
        a(href= data.linkUrl).d-block.text-purple.fw-medium.customer-link= data.linkText

    if data.cards
      .row(class= commonMb).customer-content
        each card in data.cards
          .col-12.col-md-4.mb-3.mb-md-0
            +product-card(card)

    if data.desc
      each desc in data.desc
        p.fw-light.customer-text= desc
