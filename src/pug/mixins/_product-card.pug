mixin product-card(card)
  .card.rounded-0.border-0.h-100(class= card.cls ? card.cls : null)
      img(src= `./assets/img/${card.img}` alt= card.title).card-img.rounded-0
      .card-body.d-flex.flex-column.p-3.p-md-4.bg-lightgray
        h3.customer-product-title.fw-medium.mb-0=card.title

        if card.desc
          p.fw-light.mt-1= card.desc
